extends layout

block content
  a(class="home-button" href="/api/admin") Admin panel
  h1 #{title}
  style.
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
        font-weight: bold;
      }
      img {
        max-width: 100px;
        height: auto;
      }
      .home-button {
      background-color: #000066;
      border: none;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      text-align: center;
      display: block;
      margin: 0 auto;
      box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      transition: background-color 0.3s ease;
      }

      .home-button:hover {
      background-color: #0000cc;
      }
      .add-button {
        background-color: #33cc33;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease;
      }
      .add-button:hover {
      background-color: #66ff66;
      }
      .delete-button {
        background-color: #cc3333;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        margin-left: 10px;
        text-decoration: none;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease;
      }
      .delete-button:hover {
      background-color: #ff6666;
      }
      .update-button {
        background-color: #3333cc;
        border: none;
        color: white;
        padding: 10px 20px;
        margin-left: 10px;
        border-radius: 5px;
        text-decoration: none;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease;
      }
      .update-button:hover {
      background-color: #6666ff;
      }
      .catalog-button {
        background-color: #cc9933;
        border: none;
        color: white;
        padding: 10px 20px;
        margin-left: 10px;
        border-radius: 5px;
        text-decoration: none;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease;
      }
      .catalog-button:hover {
      background-color: #ffcc66;
      }
  a(href="/api/admin/products/add" class="add-button") Add Product
  h1 Product List
    table
      thead
        tr
          th id
          th Title
          th Description
          th Price
          th Image
      tbody
        each product in products
          tr
            td #{product._id}
            td #{product.title}
            td #{product.description}
            td #{product.price} &#x20bd
            td
              img(src="data:image/jpg;base64," + product.image.toString('base64'))
            td 
              a(class="delete-button" href="/api/admin/products/delete/" + product._id) Delete
              a(class="update-button" href="/api/admin/products/update/" + product._id) Update
              a(class="catalog-button" href="/api/catalog/" + product._id) Catalog