extends layout

block content
  h1 #{title}
  style.
      table {
        width: 100%;
        border-collapse: collapse;
      }
      th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }
      th {
        background-color: #f2f2f2;
        font-weight: bold;
      }
      img {
        max-width: 100px;
        height: auto;
      }
  h1 Product List
    table
      thead
        tr
          th Title
          th Price
          th Image
      tbody
        each product in products
          tr
            td #{product.title}
            td #{product.price}
            td
              img(src="data:image/jpg;base64," + product.image.toString('base64'))